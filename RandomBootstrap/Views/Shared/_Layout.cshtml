@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RandomBootstrap</title>

    <style>
        .body-content { margin-top: 1rem;}
        .body-content pre code {
            border: 1px solid #ccc;
            font-size: 12px;
        }
        h2 {margin-top:2rem !important;}
    </style>
    <link href="css/highlight.css" rel="stylesheet" />
    @RenderSection("Styles", false)

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
<nav class="navbar navbar-inverse bg-primary">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Random Bootstrap Theme</a>
    </div>
</nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - RandomBootstrap</p>
        </footer>
    </div>

<script src="js/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>

@RenderSection("Scripts", required: false)
</body>
</html>
